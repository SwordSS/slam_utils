<launch>

    <!-- base_link to front_laser_link -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="link_broadcaster" 
        args="0 0 0 0 0 0 base_footprint laser" />

    <!-- bag的地址与名称 -->
    <arg name="bag_filename" default="/home/yyj/data/OpenLORIS/cafe1-1.bag"/>

    <!-- 使用bag的时间戳 -->
    <param name="use_sim_time" value="true" />

    <!-- 启动 plicp_odometry 节点 -->
    <node name="TestScanOdom"
        pkg="scan_registration" type="TestScanOdom" output="screen" >
    </node>

    <!-- launch rviz -->
    <node name="rviz" pkg="rviz" type="rviz" required="true"
        args="-d $(find scan_registration)/config/rviz_config.rviz" />

    <!-- play bagfile -->
    <node name="playbag" pkg="rosbag" type="play"
        args="--clock $(arg bag_filename) --topics /scan" />

</launch>
